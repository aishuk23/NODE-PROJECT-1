<div class="container">
  <form id="student-form" action="{{ action }}" method="{{ method }}">
    <label for="fname">First Name:</label>
    <input id="fname" type="text" name="firstName" value="{{student.firstName}}" placeholder="Enter first name"
      required />
    <br />
    <label for="lname">Last Name:</label>
    <input id="lname" type="text" name="lastName" value="{{student.lastName}}" placeholder="Enter last name" required />
    <br />
    <label for="age">Age:</label>
    <input type="text" id="age" name="age" value="{{student.age}}" placeholder="Enter your age" required />
    <br />
    <label>Gender: </label>
    <input id="male" type="radio" name="gender" value="male" required />
    <label for="male">Male</label>
    <input id="female" type="radio" name="gender" value="female" required />
    <label for="female">Male</label>
    <br />
    <input type="submit" value="{{#if (ifEquality mode "add")}}Add {{else}}Edit {{/if}} Student"
      class="btn btn-primary" />
  </form>
</div>